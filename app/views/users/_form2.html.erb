<%= form_for @user, :html => {:id => "form2"} do |f| %>
	<%= f.label :age, 'How old are you?' %>
	<%= f.select :age, options_for_select(age_options), :include_blank => true %>
	<span class="checkimg" id="agecheck"><img src="/assets/check.png"></span>
	<div class="message" id="age_error"></div>

	<%= f.label :employment, 'Do you expect to be unemployed or making less than $1500 per month?' %>
	<%= f.select :employment, options_for_select(employment_options), :include_blank => true %>
	<span class="checkimg" id="employmentcheck"><img src="/assets/check.png"></span>
	<div class="desc">
	</div>
	<div class="message" id="employment_error"></div>

	<%= f.label :medical, 'Are you currently receiving medical treatment for your disabling condition?' %>
	<%= f.select :medical, options_for_select(medical_options), :include_blank => true %>
	<span class="checkimg" id="medicalcheck"><img src="/assets/check.png"></span>
	<div class="desc">
	</div>
	<div class="message" id="medical_error"></div>
	
	<%= f.label :attorney, 'Do you currently have a disability or attorney advocate?' %>
	<%= f.select :attorney, options_for_select(attorney_options), :include_blank => true %>
	<span class="checkimg" id="attorneycheck"><img src="/assets/check.png"></span>
	<div class="desc">
	</div>
	<div class="message" id="attorney_error"></div>

	<%= f.label :previous, 'Have you previously applied for disability benefits?' %>
	<%= f.select :previous, options_for_select(previous_options), :include_blank => true %>
	<span class="checkimg" id="previouscheck"><img src="/assets/check.png"></span>
	<div class="desc">
	</div>
	<div class="message" id="previous_error"></div>

	<%= f.label :desc, 'Describe your disability and how it prevents you from working' %>
	<%= f.text_area :desc %>
	<span class="checkimg" id="desccheck"><img src="/assets/check.png"></span>
	<div class="desc">
	</div>
	<div class="message" id="desc_error"></div>
	<%= f.submit "Get My Results", :class => "home-submit", :id => "submit2"%>
	<% end %>
</div>
<script type="text/javascript">
	$('#submit2').click(function(event) {
		if ($('#user_medical').val() == "") {
			event.preventDefault();
			$('#medical_error').empty().append("Please select an option");
			$('#medicalcheck img').hide();
		}
		if ($('#user_attorney').val() == "") {
			event.preventDefault();
			$('#attorney_error').empty().append("Please select an option");
			$('#attorneycheck img').hide();
		}
		if ($('#user_employment').val() == "") {
			event.preventDefault();
			$('#employment_error').empty().append("Please select an option");
			$('#employmentcheck img').hide();
		}
		if ($('#user_previous').val() == "") {
			event.preventDefault();
			$('#previous_error').empty().append("Please select an option");
			$('#previouscheck img').hide();
		}
		if ($('#user_age').val() == "") {
			event.preventDefault();
			$('#age_error').empty().append("Please select an option");
			$('#agecheck img').hide();
		}
	});

	$('select#user_age').bind('click change',function() {
		if ($('#user_age').val() != "") {
			$('#agecheck img').show();
			$('#age_error').empty();
		}
		if ($('#user_age').val() == "") {
			$('#agecheck img').hide();
			$('#age_error').empty().append("Please select an option");
		}
	});
	$('select#user_previous').bind('click change',function() {
		if ($('#user_previous').val() != "") {
			$('#previouscheck img').show();
			$('#previous_error').empty();
		}
		if ($('#user_previous').val() == "") {
			$('#previouscheck img').hide();
			$('#previous_error').empty().append("Please select an option");
		}
	});
	$('select#user_employment').bind('click change',function() {
		if ($('#user_employment').val() != "") {
			$('#employmentcheck img').show();
			$('#employment_error').empty();
		}
		if ($('#user_employment').val() == "") {
			$('#employmentcheck img').hide();
			$('#employment_error').empty().append("Please select an option");
		}
	});
	$('select#user_medical').bind('click change',function() {
		if ($('#user_medical').val() != "") {
			$('#medicalcheck img').show();
			$('#medical_error').empty();
		}
		if ($('#user_medical').val() == "") {
			$('#medicalcheck img').hide();
			$('#medical_error').empty().append("Please select an option");
		}
	});
	$('select#user_attorney').bind('click change',function() {
		if ($('#user_attorney').val() != "") {
			$('#attorneycheck img').show();
			$('#attorney_error').empty();
		}
		if ($('#user_attorney').val() == "") {
			$('#attorneycheck img').hide();
			$('#attorney_error').empty().append("Please select an option");
		}
	});

</script>