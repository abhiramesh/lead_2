<div class="container" align="center">
	<div class="logo">
		<img src="/assets/logo.png">
	</div>
	<div class="bbb-logo">
		<img src="/assets/bbb.png">
	</div>
	<div class="home-title">
		Need help with your Social Security disability claim?
		<br>
		Get your FREE, no-obligation evaluation now.
	</div>
	<div class="home-subtitle">
		All free evaluations are performed by an experienced social security disability advocate or attorney.
	</div>
	<div class="progress-bar">
		<img src="/assets/progress-3.png">
	</div>
	<div class="woman-pic">
		<img src="/assets/woman.png">
	</div>
	<div class="form-box">
		<%= form_for @user do |f| %>
			<span id="debt">Do you need help paying off debts?</span>
			<br>
			<%= f.select :debt, options_for_select(debt_options), :include_blank => true %>
			<span class="checkimg" id="debtcheck"><img src="/assets/check.png"></span>
			<div class="message" id="debt_error"></div>
			<span id="loan">Do you need help paying off student loans?</span>
			<%= f.select :loan, options_for_select(loan_options), :include_blank => true %>
			<span class="checkimg" id="loancheck"><img src="/assets/check.png"></span>
			<div class="message" id="loan_error"></div>
			<div id="newsubmit1"></div>
			<%= f.submit "Do I Qualify?", :class => "home-submit", :include_blank => true %>
		<% end %>
	</div>
</div>
<div class="container" align="center">
	<div class="logos-box" style="margin-top:-50px;">
		<hr>
		<img src="/assets/logos.png">
	</div>
	<div class="disclaimer">
		<div class="privacy">
			<a href="/privacy"> Privacy Policy</a>
		</div>
		Disclaimer: THIS IS AN ADVERTISEMENT. Advertising is paid for by participating attorneys and advocates. The site is not an attorney referral service. This website is privately owned and is not affiliated with or endorsed by Social Security Administration or any other government agency. The promotion of this website is sponsored exclusively by professional Social Security Attorneys and Advocacy Groups, in effort to provide services to the public for Disability issues.
	</div>
</div>

<script type="text/javascript">
	$('select#user_loan').bind('click change',function() {
		if ($('#user_loan').val() != "") {
			$('#loancheck img').show();
			$('#loan_error').empty();
		}
		if ($('#user_loan').val() == "") {
			$('#loancheck img').hide();
			$('#loan_error').empty().append("Please select an option");
		}
	});

	$('select#user_debt').bind('click change',function() {
		if ($('#user_debt').val() != "") {
			$('#debtcheck img').show();
			$('#debt_error').empty();
		}
		if ($('#user_debt').val() == "") {
			$('#debtcheck img').hide();
			$('#debt_error').empty().append("Please select an option");
		}
	});
	$('.home-submit').click(function(event){
		if ($('#user_debt').val() == "") {
			event.preventDefault();
			$('#debtcheck img').hide();
			$('#debt_error').empty().append("Please select an option");
		}
		if ($('#user_loan').val() == "") {
			event.preventDefault();
			$('#loancheck img').hide();
			$('#loan_error').empty().append("Please select an option");
		}
	});
</script>